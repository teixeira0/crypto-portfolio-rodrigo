<style>
form {
    display: inline-block;
}
</style>

<center><h1>Cryptocurrency Portfolio</h1>
	<p>Developed by Rodrigo Teixeira. <a href="https://github.com/teixeira0/crypto-portfolio-rodrigo">Github</a></p>
<table id="t01">
  <tr>
    <th>Asset Name</th>
    <th>Asset ID</th>
    <th>Asset Value</th>
    <th>Quantity</th>
    <th>Total Value</th>
  </tr>
  <% if not @bought_assets.nil?%>
	  <% @bought_assets.each do |asset| %>
	    <tr>
	    	<td><b><%= asset.asset_name %></b></td>
	    	<td><%= asset.asset_id %></td>
	    	<td>US$ <%= asset.asset_value.round(5) %></td>
	    	<td><%= asset.quantity.to_i %></td>
	    	<td>US$ <%= (asset.asset_value * asset.quantity).round(5) %></td>
	    </tr>
	  <% end %>
  <% end %>
</table>
<p>
<%= form_with url: portfolio_reset_path, method: :get,local: true do |form| %>
    <%= form.submit "Clear Portfolio", class: :back_button %>
<% end %>&nbsp;
<%= form_with url: crypto_market_buy_path, method: :get,local: true do |form| %>
    <%= form.submit "Buy Assets", class: :button %>
<% end %>
</p>
</center>